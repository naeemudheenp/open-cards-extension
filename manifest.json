{
  "manifest_version": 3,
  "name": "Open-Cards",
  "description": "Save and manage premium dark themed quick cards for your favorite links.",
  "version": "1.0.0",
  "permissions": [
    "storage",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Open-Cards"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+O",
        "mac": "Command+Shift+O"
      },
      "description": "Open the Open-Cards popup"
    }
  }
}